<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/options_background"
    tools:context=".gameScenes.OptionsActivity">

    <ImageView
        android:id="@+id/menuSphere1"
        android:layout_width="304dp"
        android:layout_height="276dp"
        android:layout_marginStart="-100dp"
        android:elevation="1sp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/content_desc_options_sphere_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265"
        app:srcCompat="@drawable/main_screen_sphere1"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/menuSphere2"
        android:layout_width="503dp"
        android:layout_height="501dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="-250dp"
        android:elevation="1sp"
        android:contentDescription="@string/content_desc_options_sphere_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/main_screen_sphere2" />

    <ImageView
        android:id="@+id/menuSphere3"
        android:layout_width="373dp"
        android:layout_height="356dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="-150dp"
        android:elevation="1sp"
        android:contentDescription="@string/content_desc_options_sphere_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/main_screen_sphere3"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/optionsBackgroundCanvas"
        android:layout_width="380dp"
        android:layout_height="576dp"
        android:elevation="2sp"
        android:contentDescription="@string/content_desc_options_canvas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743"
        app:srcCompat="@drawable/options_canvas" />

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="317dp"
        android:layout_height="96dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/options_canvas_title"
        android:fontFamily="@font/grobold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="@string/text_options"
        android:textSize="40sp"
        android:elevation="3sp"
        android:textColor="#FFD2D2"
        app:layout_constraintBottom_toTopOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/optionsSoundSwitch"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/options_canvas_lenguage"
        android:checked="true"
        android:elevation="3sp"
        android:fontFamily="@font/grobold"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="@string/text_sound"
        android:textColor="#FFD2D2"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintTop_toBottomOf="@+id/optionsText"
        app:layout_constraintVertical_bias="0.17"
        tools:checked="true"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/optionsNotificationSwitch"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/options_canvas_lenguage"
        android:checked="true"
        android:elevation="3sp"
        android:fontFamily="@font/grobold"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="@string/text_notifications"
        android:textColor="#FFD2D2"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintTop_toBottomOf="@+id/optionsSoundSwitch"
        app:layout_constraintVertical_bias="0.155"
        tools:checked="true"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ImageView
        android:id="@+id/optionsHomeButton"
        android:layout_width="107dp"
        android:layout_height="102dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/content_desc_options_home_button"
        android:elevation="3sp"
        app:layout_constraintBottom_toBottomOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintTop_toBottomOf="@+id/optionsNotificationSwitch"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/options_home"
        tools:ignore="RedundantDescriptionCheck" />

    <Button
        android:id="@+id/optionsLogOutButton"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:background="@drawable/options_canvas_lenguage"
        android:elevation="3sp"
        android:fontFamily="@font/grobold"
        android:text="@string/text_log_out"
        app:backgroundTint="#7D525D"
        app:layout_constraintBottom_toTopOf="@+id/optionsHomeButton"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintStart_toStartOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintTop_toBottomOf="@+id/optionsNotificationSwitch"
        app:layout_constraintVertical_bias="0.577" />

</androidx.constraintlayout.widget.ConstraintLayout>