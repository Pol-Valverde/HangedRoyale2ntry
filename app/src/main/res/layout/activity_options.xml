<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/options_background"
    tools:context=".OptionsActivity">

    <ImageView
        android:id="@+id/optionsBackgroundCanvas"
        android:layout_width="380dp"
        android:layout_height="576dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742"
        app:srcCompat="@drawable/options_canvas" />

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="317dp"
        android:layout_height="96dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/options_canvas_title"
        android:fontFamily="@font/grobold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="OPTIONS"
        android:textSize="40sp"
        android:elevation="1sp"
        android:textColor="#FFD2D2"
        app:layout_constraintBottom_toTopOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/optionsSoundSwitch"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:background="@drawable/options_canvas_lenguage"
        android:checked="true"
        android:elevation="2sp"
        android:fontFamily="@font/grobold"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="Sound"
        android:textSize="28sp"
        android:textColor="#FFD2D2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionsText"
        app:layout_constraintVertical_bias="0.141"
        tools:checked="true" />

    <Switch
        android:id="@+id/optionsNotificationSwitch"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:background="@drawable/options_canvas_lenguage"
        android:checked="true"
        android:elevation="2sp"
        android:fontFamily="@font/grobold"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="Notifications"
        android:textSize="28sp"
        android:textColor="#FFD2D2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionsSoundSwitch"
        app:layout_constraintVertical_bias="0.195"
        tools:checked="true" />

    <ImageView
        android:id="@+id/optionsHomeButton"
        android:layout_width="107dp"
        android:layout_height="102dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintTop_toBottomOf="@+id/optionsNotificationSwitch"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/options_home" />

    <Button
        android:id="@+id/optionsLogOutButton"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:background="@drawable/hud_canvas_word"
        android:text="Log Out"
        android:fontFamily="@font/grobold"
        app:layout_constraintBottom_toBottomOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackgroundCanvas"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/optionsHomeButton"
        app:layout_constraintTop_toBottomOf="@+id/optionsNotificationSwitch"
        app:layout_constraintVertical_bias="0.672" />

</androidx.constraintlayout.widget.ConstraintLayout>